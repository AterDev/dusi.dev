<?xml version="1.0" encoding="UTF-8" ?>
<Shell
	x:Class="DusiApp.AppShell"
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:views="clr-namespace:DusiApp.Views"
	xmlns:local="clr-namespace:DusiApp">

	<TabBar>
        <ShellContent
            Title="待审核"
            Icon="fact_check.svg"	
            ContentTemplate="{DataTemplate views:NewsListPage}" />
        <ShellContent
			Title="资讯"
			Icon="newspaper.svg"
			ContentTemplate="{DataTemplate views:MainPage}" />
		<ShellContent
			Title="设置"
			Icon="settings.svg"
			ContentTemplate="{DataTemplate views:SettingPage}" />
	</TabBar>
    
</Shell>
